{
  "compilerOptions": {
    /* File Structure */
    "rootDir": "./src", // Source code folder
    "outDir": "./dist", // Compiled output
    "baseUrl": "./src",
    "paths": {
      "@config/*": ["config/*"],
      "@models/*": ["models/*"],
      "@utils/*": ["utils/*"]
    },

    /* Target Environment */
    "target": "ES2020", // Modern Node features
    "module": "CommonJS", // ✅ Drizzle chạy ổn với CJS
    "moduleResolution": "node", // Node-style resolution
    "lib": ["ES2020"],
    "types": ["node"],

    /* Output Settings */
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true, // Cho phép import mysql2, express,...
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true, // Import JSON trong config

    /* Strictness */
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "exactOptionalPropertyTypes": true,

    /* Misc */
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
